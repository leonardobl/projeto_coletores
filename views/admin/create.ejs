<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/create.css">
    <link rel="stylesheet" href="/css/login.css">
    <title>CD 1250 - Vem  Ser Feliz</title>
</head>
<body>
    <%- include ('../partials/header.ejs') %>
    
    <div class="container">
        
        <form class="form-login" action="/user/save" method="POST">
            <p>Cadastro De Usuario</p>
            
            <span class="material-icons icon-user">
                account_circle
            </span>
            <input placeholder="Usuario" class="inp inp-login-user" type="text" name="login" id="login">
            <hr>
            
            <span class="material-icons icon-name">
                assignment_ind
            </span>
            <input placeholder="Nome Completo" class="inp inp-login-name" type="text" name="name" id="name">
            <hr>
            
            
            <span class="material-icons icon-lock">
                lock
            </span>
            <input placeholder="Senha" class="inp inp-login-password" type="password" name="password" id="password">
            
            <input type='submit' value="Cadastrar" class="btn-login">
            
        </form>
        <div class="table-user">
            <h2>Lista De Usuarios Cadastrados</h2>
            <table>
                <thead>
                    <tr>
                        <th>Login</th>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach( user => { %>
                        <tr>
                            <td><%= user.login %></td>
                            <td><%= user.name %></td>
                            <td>
                                <button><a href="#">Alterar</a></button>
                                <button><a href="#">Excluir</a></button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            
        </div>
        
    </body>
    </html>